<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <Button
        android:id="@+id/m_del_btn"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:background="@android:drawable/ic_delete"
        android:clickable="false"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m_add_img_btn"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:layout_marginRight="114dp"
        android:background="@android:drawable/ic_input_add"
        android:clickable="false"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m_edit_btn"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:layout_marginRight="57dp"
        android:clickable="false"
        android:text="EDIT"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m_pre_btn"
        android:layout_width="59dp"
        android:layout_height="127dp"
        android:layout_gravity="right|left"

        android:layout_marginTop="120dp"
        android:background="@android:drawable/ic_media_previous"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/m_text"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:gravity="center|left"
        android:text="title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/m_author"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:background="#00FFFFFF"
        android:gravity="center|left"
        android:text="author"
        android:textColor="#2967C9"
        android:textSize="30dp"
        android:textStyle="italic"></TextView>

    <ImageView
        android:id="@+id/m_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"></ImageView>

    <Button
        android:id="@+id/m_next_btn"
        android:layout_width="59dp"
        android:layout_height="127dp"
        android:layout_gravity="right"

        android:layout_marginTop="120dp"
        android:background="@android:drawable/ic_media_next" />

    <Button
        android:id="@+id/m_del_img_btn"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:background="@drawable/upsdk_cancel_normal"
        android:clickable="false"
        android:visibility="invisible" />


</androidx.cardview.widget.CardView>